root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,ts}]
charset = utf-8

[Makefile]
indent_style = tab

# Indentation override for all JS under lib directory
[src/**.{js,ts}]
indent_style = space
indent_size = 4

# Matches the exact files either package.json or .travis.yml
[{package.json}]
indent_style = space
indent_size = 2
